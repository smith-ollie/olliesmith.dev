---
import { type CollectionEntry, render } from "astro:content";
import { Github } from "./icons/github";
import { Open } from "./icons/open";
import Typography from "./typography/typography";

interface Props {
  project: CollectionEntry<"projects">;
  invert?: boolean;
}

const { project, invert } = Astro.props;

const { Content } = await render(project);
---

<article
  class="project border-secondary size-full flex flex-col @[1000px]:grid grid-cols-3 [&+.project]:mt-10"
>
  <div
    class="flex flex-col justify-center gap-8 @[1000px]:px-18 px-6 py-8 col-span-2 w-full"
  >
    <Typography variant="heading" size="small" as="h2">
      {project.data.title}
    </Typography>
    <Typography variant="body" size="medium"><Content /></Typography>
    <div class="flex gap-6">
      <a href={project.data.clickthrough}>
        <Github className="fill-secondary h-[28px] w-[28px]" />
      </a>
      <a href={project.data.url}>
        <Open className="fill-secondary h-[28px] w-[28px]" />
      </a>
    </div>
  </div>
  <iframe
    src={project.data.url}
    scrolling="no"
    class:list={[
      "size-full overflow-hidden aspect-square",
      invert ? "@[1000px]:order-1" : "",
    ]}></iframe>
</article>
