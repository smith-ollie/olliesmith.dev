---
import Layout from "../../layouts/layout.astro";

import Footer from "../../components/footer.astro";
import Page from "../../components/page.astro";

import { getCollection } from "astro:content";
import HeroWrapper from "../../components/hero-wrapper.astro";
import Project from "../../components/project.astro";
import Typography from "../../components/typography/typography";

const projects = await getCollection("projects").then((projects) =>
  projects.sort(
    (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  )
);
---

<Layout title="Projects">
  <Page>
    <HeroWrapper />
    <header class="@[1050px]:px-18 self-start px-6">
      <Typography variant="heading" size="medium" className="font-bold" as="h2">
        Projects
      </Typography>
    </header>
    <div class="py-5">
      {
        projects.map((project, index) => {
          return <Project project={project} />;
        })
      }
    </div>
    <Footer />
  </Page>
</Layout>
